---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import MyAstroComponent from "../components/MyAstroComponent.astro";
import MyReactComponent from "../components/MyReactComponent.jsx";
import MyVueComponent from "../components/MyVueComponent.vue";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
---

<!DOCTYPE html>
<html lang="en">
	<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />

	<body>
		<Header title={SITE_TITLE} />
		<main>
			<h1>This is a test page</h1>
			<h2>It has some Astro 👩‍🚀 components:</h2>
			<MyAstroComponent value="Phoenix" />
			<h2>Some static React ⚛ components:</h2>
			<MyReactComponent />
			<h2>Alongside some static Vue ✌️ components:</h2>
			<MyVueComponent value="Storm" />
			<h2>As well as some reactive 'island' 🏝️ React components:</h2>
			<MyReactComponent client:load />
		</main>
	</body>
</html>
